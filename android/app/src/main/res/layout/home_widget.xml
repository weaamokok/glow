<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="25dp">

    <!-- Category -->
    <TextView
        android:id="@+id/widget_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:text="Physical"
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Title + Complete Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Commute Home"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_complete_action"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button"

            android:drawableLeft="@android:color/black"
            android:drawableTop="@android:color/background_dark"
            android:drawableRight="@android:color/background_dark"
            android:drawableBottom="@android:color/background_dark"
            android:drawablePadding="5dp"
            android:minWidth="15dp"
            android:minHeight="15dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:textColor="#B399D4"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Priority badge -->
    <TextView
        android:id="@+id/widget_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="6dp"
        android:background="@drawable/priority_medium_bg"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="4dp"
        android:text="Medium"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <!-- Duration and Location -->
    <TextView
        android:id="@+id/widget_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30min | Commute"
        android:textColor="#666666"
        android:textSize="12sp" />
</LinearLayout>
